<header class="bg-white">
  <div class="mx-auto flex h-16 w-full items-center gap-8 px-4">
    <div class="flex flex-1 items-center justify-between">
      <nav class=" md:block">
        <ul class="flex items-center gap-6 sm:text-sm text-xs">
          <li>
            <a class="text-gray-500 transition hover:text-gray-500/75" href="/">
              Home
            </a>
          </li>
          <li>
            <a class="text-gray-500 transition hover:text-gray-500/75" href="/leaderboard">
              Leaderboard
            </a>
          </li>
        </ul>
      </nav>

      <div class="flex items-center sm:gap-4 gap-2">
        <div class="flex gap-4">
          <% if (user) { %>
            <a class="block rounded-md bg-black/90 sm:px-5 px-3 py-2.5 sm:text-sm text-xs font-medium text-white transition hover:bg-black"
              href="/profile">
              Profile
            </a>

            <a class="rounded-md bg-gray-100 sm:px-5 px-3 py-2.5 sm:text-sm text-xs font-medium text-black transition hover:text-black/75 sm:block"
              href="/auth/logout">
              Logout
            </a>
            <% } %>
        </div>
      </div>
    </div>
  </div>
</header>